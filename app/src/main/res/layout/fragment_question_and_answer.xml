<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:alpha="0.9"
    android:id="@+id/cl_question_and_answer">


    <TextView
        android:id="@+id/txt_question"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/frame_question_rect"
        android:gravity="center_horizontal"
        android:paddingVertical="24dp"
        android:paddingHorizontal="8dp"
        android:text="Question"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_answer1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        android:background="@drawable/frame_question"
        android:padding="8dp"
        android:text="answer1"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingStart="66dp"
        android:paddingEnd="66dp"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/txt_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_answer2"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/frame_question"
        android:padding="8dp"
        android:text="answer2"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingStart="66dp"
        android:paddingEnd="66dp"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/txt_answer1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_answer3"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/frame_question"
        android:padding="8dp"
        android:text="answer3"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingStart="66dp"
        android:paddingEnd="66dp"
        app:layout_constraintTop_toBottomOf="@id/txt_answer2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_answer4"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/frame_question"
        android:padding="8dp"
        android:text="answer4"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingStart="66dp"
        android:paddingEnd="66dp"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/txt_answer3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>
    <FrameLayout
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toTopOf="@id/txt_answer1"
        app:layout_constraintStart_toStartOf="@id/txt_question"
        app:layout_constraintEnd_toEndOf="@id/txt_question"
        app:layout_constraintTop_toTopOf="@id/txt_question"
        app:layout_constraintVertical_bias="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time"/>
        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="60"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </FrameLayout>
    <TextView
        android:id="@+id/txt_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/txt_question"
        app:layout_constraintBottom_toBottomOf="@id/txt_question"
        app:layout_constraintStart_toStartOf="@id/txt_question"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/txt_question"
        app:layout_constraintVertical_bias="0"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>